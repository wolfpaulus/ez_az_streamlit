{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "webAppName": "ez_az_streamlit",
        "repoUrl": "https://github.com/wolfpaulus/ez_az_streamlit.git",
        "linuxFxVersion": "PYTHON|3.11",
        "cmdLine": "python -m streamlit run app/streamlit_app.py --server.port 8000 --server.address 0.0.0.0",
        "location": "East US",
        "appServicePlanPortalName": "[concat('AppServicePlan-', variables('webAppName'))]"
    },
    "parameters": {
        "webAppName": {
            "type": "string",
            "defaultValue": "[concat('webApp-', variables('webAppName'))]",
            "minLength": 2,
            "metadata": {
                "description": "Web app name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[variables('location')]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "defaultValue": "F1",
            "metadata": {
                "description": "The SKU of App Service Plan."
            }
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue": "[variables('linuxFxVersion')]",
            "metadata": {
                "description": "The Runtime stack of current web app"
            }
        },
        "repoUrl": {
            "type": "string",
            "defaultValue": "[variables('repoUrl')]",
            "metadata": {
                "description": "Git Repo URL"
            }
        },
        "repoBranch": {
            "type": "string",
            "defaultValue": "main",
            "metadata": {
                "description": "Git Repo branch to deploy"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-06-01",
            "name": "[variables('appServicePlanPortalName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "kind": "linux",
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",

            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]"
                }
            },
            "resources": [
                {
                    "type": "sourcecontrols",
                    "apiVersion": "2020-06-01",
                    "name": "web",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('repoBranch')]",
                        "isManualIntegration": true
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2021-03-01",
            "name": "[concat(parameters('webAppName'), '/web')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ],
            "properties": {
                "appCommandLine": "[variables('cmdLine')]"
            }
        }
    ]
}
